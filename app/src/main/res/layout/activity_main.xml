<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- EditText để nhập ID -->
        <EditText
            android:id="@+id/etFruitId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Fruit ID"
            android:inputType="text"
            android:padding="12dp" />

        <!-- Button để gọi API -->
        <Button
            android:id="@+id/btnGetFruit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Get Fruit" />

        <!-- TextView để hiển thị thông tin trái cây -->
        <TextView
            android:id="@+id/tvFruitInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="16dp"
            android:text="Fruit Info will appear here"
            android:textSize="16sp" />
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>